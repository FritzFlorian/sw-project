<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="[%d{HH:mm:ss.SSS}] %-5level [%-70logger{36}]: %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <!-- Possibly activate lower log levels for specific classes -->
    <!-- <Logger name="com.ecorp.fritzshipping.service.DeliveryService" level="TRACE"/> -->
    <Root level="debug">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>